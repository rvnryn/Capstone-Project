{
  "name": "Cardiac Delights - Restaurant Management",
  "short_name": "CardiacDelights",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#000000",
  "theme_color": "#fbbf24",
  "description": "A modern, responsive dashboard and management PWA for Cardiac Delights with offline capabilities, inventory management, menu planning, and comprehensive reporting.",
  "lang": "en",
  "orientation": "portrait-primary",
  "dir": "ltr",
  "categories": ["food", "productivity", "business", "utilities", "finance"],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View business overview and analytics",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/Dashboard.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Inventory",
      "short_name": "Inventory", 
      "description": "Manage inventory and stock levels",
      "url": "/inventory",
      "icons": [
        {
          "src": "/Inventory.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Menu",
      "short_name": "Menu",
      "description": "Update menu items and pricing",
      "url": "/menu", 
      "icons": [
        {
          "src": "/Menu.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Reports",
      "short_name": "Reports",
      "description": "View sales and business reports",
      "url": "/report",
      "icons": [
        {
          "src": "/Report.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+cardiacdelights",
      "url": "/?protocol=%s"
    }
  ],
  "handle_links": "preferred",

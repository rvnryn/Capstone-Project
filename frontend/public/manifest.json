{
  "name": "Cardiac Delights - Restaurant Management",
  "short_name": "CardiacDelights",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#000000",
  "theme_color": "#000000",
  "description": "A modern, responsive dashboard and management PWA for Cardiac Delights with offline capabilities, inventory management, menu planning, and comprehensive reporting.",
  "lang": "en",
  "orientation": "any",
  "dir": "ltr",
  "categories": ["food", "productivity", "business", "utilities", "finance"],
  "prefer_related_applications": false,
  "id": "/",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "application/vnd.ms-excel": [".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["text/csv", "application/json", "image/*"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View business overview and analytics",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/Dashboard.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Inventory",
      "short_name": "Inventory",
      "description": "Manage inventory and stock levels",
      "url": "/inventory",
      "icons": [
        {
          "src": "/Inventory.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Menu",
      "short_name": "Menu",
      "description": "Update menu items and pricing",
      "url": "/menu",
      "icons": [
        {
          "src": "/Menu.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Reports",
      "short_name": "Reports",
      "description": "View sales and business reports",
      "url": "/report",
      "icons": [
        {
          "src": "/Report.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+cardiacdelights",
      "url": "/?protocol=%s"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "icons": [
    { "src": "/logo2.png", "sizes": "72x72", "type": "image/png", "purpose": "any" },
    { "src": "/logo2.png", "sizes": "96x96", "type": "image/png", "purpose": "any" },
    { "src": "/logo2.png", "sizes": "128x128", "type": "image/png", "purpose": "any" },
    { "src": "/logo2.png", "sizes": "144x144", "type": "image/png", "purpose": "any" },
    { "src": "/logo2.png", "sizes": "152x152", "type": "image/png", "purpose": "any" },
    { "src": "/logo2.png", "sizes": "192x192", "type": "image/png", "purpose": "any" },
    { "src": "/logo2.png", "sizes": "192x192", "type": "image/png", "purpose": "maskable" },
    { "src": "/logo2.png", "sizes": "384x384", "type": "image/png", "purpose": "any" },
    { "src": "/logo2.png", "sizes": "512x512", "type": "image/png", "purpose": "any" },
    { "src": "/logo2.png", "sizes": "512x512", "type": "image/png", "purpose": "maskable" }
  ]
}
